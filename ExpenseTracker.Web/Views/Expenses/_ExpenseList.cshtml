@model IEnumerable<ExpenseViewModel>

@Html.ActionLink("New", "Add", "Expenses", null,new { @class = "btn btn-primary newExpenseBtn"})
@* <button class="btn btn-primary newExpensBtn">New</button> *@
<table class="table table-striped">
    <thead>
        <th>
            <tr>
                <td>Amount</td>
                <td>Description</td>
                <td>Category</td>
            </tr>
        </th>
    </thead>
    <tbody class="newEpxenseForm">
            @await Html.PartialAsync("_ExpenseForm", new ExpenseViewModel())
        </tbody>
    <tbody>
        @if(Model?.Count() > 0)
        {
            foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Amount</td>
                    <td>@expense.Description</td>
                    <td>@expense.Category</td>
                </tr>
            }
        }
    </tbody>
</table>


<script>
    $(".newEpxenseForm").toggleClass("hidden");
    $(".newExpensBtn").click(function (){
        $('.newEpxenseForm').toggleClass("hidden");
    });
</script>